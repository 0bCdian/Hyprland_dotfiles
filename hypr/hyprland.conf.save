# Globals #
monitor=,preferred,auto, 1
wsbind=1,eDP-1
exec-once=hyprctl setcursor Bibata-Modern-Ice 1
exec-once=$HOME/.config/hypr/autostart
exec-once=dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
input {
    kb_layout=latam,es 
    kb_variant=ffffff
    kb_model=
    kb_options=
    kb_rules=

    follow_mouse=1

    touchpad {
        natural_scroll=no
    }
}

misc {
  enable_swallow=true
}

general {
    sensitivity=1.0 # for mouse cursor
    main_mod=SUPER
    gaps_in=3
    gaps_out=3
    border_size=0
    col.active_border=0xfff5c2e7
    col.inactive_border=0xff45475a
    apply_sens_to_raw=0 # whether to apply the sensitivity to raw input (e.g. used by games where you aim using your mouse)9
    damage_tracking=full # leave it on full unless you hate your GPU and want to make it suffer
}

decoration {
    blur_ignore_opacity=1
    blur_new_optimizations=true
    multisample_edges=true
    drop_shadow=false
    shadow_ignore_window=true
    shadow_offset= 0 0
    shadow_range=35
    shadow_render_power=4
    col.shadow=rgba(00000099)
    col.shadow_inactive=rgba(000000AA)
    rounding=16
    active_opacity= 0.9
    inactive_opacity= 0.9
    blur=true
    blur_size=3 # minimum 1
    blur_passes=5 # minimum 1, more passes = more resource intensive.
    # Your blur "amount" is blur_size * blur_passes, but high blur_size (over around 5-ish) will produce artifacts.
    # if you want heavy blur, you need to up the blur_passes.
    # the more passes, the more you can up the blur_size without noticing artifacts.
}



animations {
    enabled=1
    # bezier=overshot,0.05,0.9,0.1,1.1 # Version 1
    # bezier=overshot,0.13,0.99,0.29,1.09 # Version 2
    bezier= overshot,0,0.61,0.22,1.12 #Current active
    animation=windows,1,3.8,default,slide 
    animation=border,1,4,default
    animation=fade,1,4,default
    animation=workspaces,1,3.8,overshot,slidevert
}

dwindle {
    pseudotile=1 # enable pseudotiling on dwindle
    force_split=0
    col.group_border=rgb(ebdbb2)
    col.group_border_active=rgb(458588)
    
}

master{
    
}

gestures {
    workspace_swipe=yes
    workspace_swipe_fingers=3
}

# Window rules #

windowrule=float,Rofi
windowrule=float,system_monitor
windowrule=size 1000 760,system_monitor
windowrule=move 454 192,system_monitor
windowrule=float,floatcritty
windowrule=move center,floatcritty
windowrule=float,calendar
windowrule=size 721 483,calendar
windowrule=move 595 44,calendar
windowrule= opacity 0.99 0.99,Cider
windowrule=workspace 3,firefox
windowrule= opaque,firefox
windowrule= float, title:^(Firefox â€” Sharing Indicator)
windowrule= rounding 0,com.obsproject.Studio

